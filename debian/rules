#!/usr/bin/make -f
# -*- makefile -*-

%:
	dh $@ --with python3,bash-completion --buildsystem=pybuild

override_dh_auto_build:
	mkdir docs/man
	$(MAKE) -C docs/
override_dh_install:
	mkdir -p $(CURDIR)/debian/clara-core/usr/share/clara/
	cp  example-conf/config_default.ini $(CURDIR)/debian/clara-core/usr/share/clara/config.ini
	dh_install

# disable unit tests as they are not designed to run during package builds
override_dh_auto_test:

override_dh_clean:
	rm -rf Clara.egg-info/
	rm -rf docs/man
	$(MAKE) -C docs  clean
	dh_clean
